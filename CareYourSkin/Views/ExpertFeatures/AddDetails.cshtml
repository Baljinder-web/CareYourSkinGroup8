@model CareYourSkin.Models.Expert

<h2>Add Expert</h2>
<form asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Specialty"></label>
        <input asp-for="Specialty" />
        <span asp-validation-for="Specialty"></span>
    </div>
    <div>
        <label asp-for="ClinicAddress"></label>
        <input asp-for="ClinicAddress" />
        <span asp-validation-for="ClinicAddress"></span>
    </div>
    <div>
        <label asp-for="ContactInfo"></label>
        <input asp-for="ContactInfo" />
        <span asp-validation-for="ContactInfo"></span>
    </div>
    <button type="submit">Save</button>
</form>