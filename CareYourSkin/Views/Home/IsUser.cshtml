@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "CareYourSkin";
}
<h1>Welcome to the CareYouSkin </h1>
@if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "User")
{
    <h3>Hello, Welcome  @HttpContextAccessor.HttpContext.Session.GetString("Username")! You are logged in as a <b>User</b></h3>
    
}
else if(HttpContextAccessor.HttpContext.Session.GetString("Role") == "Expert")
{
   <p>***************User panel********</p>
    <h3>Hello, Welcome  @HttpContextAccessor.HttpContext.Session.GetString("Username")! You are logged in as a <b>User</b></h3>
    
}
else{
     <p>Opps!!Please log in or register to continue.</p>
}

<div class="container">
    <!-- Added container for spacing -->
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <marquee behavior="scroll" direction="left">Checkout Our Recent Offers 😊!! Select Yours Now 🛒🛒🛒</marquee>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/BackImages/Slide3.jpg" class="d-block w-100" alt="..." height="630">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Best Offer Until Now</h5>
                    <p>Grab it Now!!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/BackImages/Slide2.jpg" class="d-block w-100" alt="..." height="630">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Amazing</h5>
                    <p>Best Forever!!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/BackImages/Slide1.jpg" class="d-block w-100" alt="..." height="630">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Buy Now</h5>
                    <p>Most Trusted One!!</p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

